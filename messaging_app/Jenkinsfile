pipeline {
    agent any

    environment {
        // Replace with your Jenkins GitHub credentials ID
        GITHUB_CREDENTIALS = 'GITHUB_CREDENTIALS_ID'
        VENV_PATH = 'venv'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Pulling code from GitHub...'
                git branch: 'main', credentialsId: "${GITHUB_CREDENTIALS}", url: 'https://github.com/yourusername/messaging-app.git'
            }
        }

        stage('Setup Python Environment') {
            steps {
                echo 'Creating virtual environment and installing dependencies...'
                sh """
                    cd messaging_app
                    python3 -m venv ${VENV_PATH}
                    . ${VENV_PATH}/bin/activate
                    pip3 install --upgrade pip
                    pip3 install -r requirements.txt
                """
            }
        }

        stage('Run Tests') {
            steps {
                echo 'Running pytest...'
                sh """
                    cd messaging_app
                    . ${VENV_PATH}/bin/activate
                    pytest --junitxml=report.xml
                """
            }
        }

        stage('Archive Test Report') {
            steps {
                echo 'Archiving test results...'
                junit 'messaging_app/report.xml'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up virtual environment...'
            sh "rm -rf messaging_app/${VENV_PATH}"
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check test reports for details.'
        }
    }
}
