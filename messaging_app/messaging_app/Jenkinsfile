pipelin {
    agent any

    stages{
        stage("Clone Repo"){
            steps {
                git credentials: 'github-creds',
                    url: 'https://github.com/geecodez/alx-backend-python/messaging_app.git'
            }
        }

        stage("Install Dependencies"){
            steps{
                sh '''
                python3 -m venv venv
                . venv/bin/activate
                pip install -r requirements.txt
                '''
            }
        }

        stage('Run Tests'){
            steps{
                sh '''
                . venv/bin/activate
                pytest --junitxml=test-results.xml
                '''
            }
        }
    }

    post {
        always {
            junit 'test-results.xml'
        }
    }
}