pipeline {
    agent any
    git branch 'main'
    environment {
        // Replace with your Jenkins GitHub credentials ID
        GITHUB_CREDENTIALS = 'GITHUB_CREDENTIALS_ID'
        // Path for virtual environment
        VENV_PATH = 'venv'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Pulling code from GitHub...'
                git credentialsId: "${GITHUB_CREDENTIALS}", url: 'https://github.com/yourusername/messaging-app.git'
            }
        }

        stage('Setup Python Environment') {
            steps {
                echo 'Creating virtual environment and installing dependencies...'
                sh """
                    python3 -m venv ${VENV_PATH}
                    . ${VENV_PATH}/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                """
            }
        }

        stage('Run Tests') {
            steps {
                echo 'Running pytest...'
                sh """
                    . ${VENV_PATH}/bin/activate
                    pytest --junitxml=report.xml
                """
            }
        }

        stage('Archive Test Report') {
            steps {
                echo 'Archiving test results...'
                junit 'report.xml'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up virtual environment...'
            sh "rm -rf ${VENV_PATH}"
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check test reports for details.'
        }
    }
}

["messaging_app/requirements.txt", "pip3 install"]

pipeline {
    agent any

    environment {
        // Docker Hub credentials ID in Jenkins
        DOCKERHUB_CREDENTIALS = 'DOCKERHUB_CREDENTIALS_ID'
        // Docker image name and tag
        DOCKER_IMAGE = 'yourdockerhubusername/messaging-app:latest'
    }

    stages {
        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh """
                    cd messaging_app
                    docker build -t ${DOCKER_IMAGE} .
                """
            }
        }

        stage('Push Docker Image') {
            steps {
                echo 'Pushing Docker image to Docker Hub...'
                withCredentials([usernamePassword(credentialsId: "${DOCKERHUB_CREDENTIALS}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh """
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker push ${DOCKER_IMAGE}
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Docker image built and pushed successfully!'
        }
        failure {
            echo 'Docker build or push failed. Check logs for details.'
        }
    }
}
